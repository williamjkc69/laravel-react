{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "application",
      "host": {
        "sourcePath": "/var/app/current"
      }
    },
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/phpdocker/nginx/conf.d"
      }
    },
    {
      "name": "php-ini",
      "host": {
        "sourcePath": "/var/app/current/phpdocker/php-fpm/php-ini-production-overrides.ini"
      }
    },
    {
      "name": "supervisor",
      "host": {
        "sourcePath": "/var/app/current/phpdocker/php-fpm/supervisor/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "php-fpm",
      "image": "609078878080.dkr.ecr.us-east-1.amazonaws.com/test1:latest",
      "environment": [
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ],
      "essential": true,
      "memory": 2048,
      "links": [
        "redis"
      ],
      "mountPoints": [
        {
          "sourceVolume": "application",
          "containerPath": "/application",
          "readOnly": false
        },
        {
          "sourceVolume": "php-ini",
          "containerPath": "/etc/php/7.4/fpm/conf.d/99-overrides.ini",
          "readOnly": false
        },
        {
          "sourceVolume": "supervisor",
          "containerPath": "/etc/supervisor/conf.d",
          "readOnly": false
        }
      ]
    },
    {
      "name": "webserver",
      "image": "nginx",
      "environment": [],
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "php-fpm"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "application",
          "containerPath": "/application",
          "readOnly": false
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis",
      "environment": [
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ],
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 6379,
          "containerPort": 6379
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "application",
          "containerPath": "/application",
          "readOnly": false
        }
      ]
    }
  ]
}
